	author = {Ramakers, Jip J. C. and Cobben, Marleen M. P. and Bijma, Piter and Reed, Thomas E. and Visser, Marcel E. and Gienapp, Phillip},
	month = may,
	year = {2018},
	keywords = {quantitative genetics, adaptation, environmental shift, evolutionary dynamics, maternal inheritance, plastic maternal effect},
	pages = {E144--E158}
}

@article{sullivan_field_2018,

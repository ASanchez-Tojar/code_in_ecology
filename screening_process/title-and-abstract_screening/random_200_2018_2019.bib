	number = {5},
	journal = {MOLECULAR ECOLOGY},
	author = {Parkinson, John Everett and Bartels, Erich and Devlin-Durante, Meghann K. and Lustic, Caitlin and Nedimyer, Ken and Schopmeyer, Stephanie and Lirman, Diego and LaJeunesse, Todd C. and Baums, Iliana B.},

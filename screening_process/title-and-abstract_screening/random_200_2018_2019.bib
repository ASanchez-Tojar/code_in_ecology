	journal = {JOURNAL OF APPLIED ECOLOGY},
	author = {Derksen-Hooijberg, Marlous and Angelini, Christine and Lamers, Leon P. M. and Borst, Annieke and Smolders, Alfons and Hoogveld, Jasper R. H. and de Paoli, Helene and van de Koppel, Johan and Silliman, Brian R. and van der Heide, Tjisse},
	month = jan,
	year = {2018},
	keywords = {resilience, Spartina alterniflora, facilitation, coastal ecosystems, cordgrass, foundation species, Geukensia demissa, mussels, positive interactions, saltmarsh},
	pages = {405--414}
}